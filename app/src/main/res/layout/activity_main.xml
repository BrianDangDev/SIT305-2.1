<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Length Conversion -->
        <TextView
            android:id="@+id/length_conversion_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Length Conversion"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/length_source_unit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/length_conversion_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Source Unit:"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/length_source_unit_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/length_source_unit_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/length_dest_unit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/length_source_unit_spinner"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Destination Unit:"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/length_dest_unit_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/length_dest_unit_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/length_input_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/length_dest_unit_spinner"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Input Value:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/length_input_value_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/length_input_value_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/length_convert_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/length_input_value_edittext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Convert" />

        <TextView
            android:id="@+id/length_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/length_convert_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Result:"
            android:textSize="18sp" />
        <!-- Weight Conversion -->
        <TextView
            android:id="@+id/weight_conversion_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/length_result_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Weight Conversion"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/weight_source_unit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_conversion_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Source Unit:"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/weight_source_unit_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_source_unit_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/weight_dest_unit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_source_unit_spinner"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Destination Unit:"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/weight_dest_unit_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_dest_unit_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/weight_input_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_dest_unit_spinner"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Input Value:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/weight_input_value_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_input_value_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/weight_convert_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_input_value_edittext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Convert" />

        <TextView
            android:id="@+id/weight_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_convert_button"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Result:"
            android:textSize="18sp" />

        <!-- Temperature Conversion -->
        <TextView
            android:id="@+id/temperature_conversion_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_result_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Temperature Conversion"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/temperature_source_unit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_conversion_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Source Unit:"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/temperature_source_unit_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_source_unit_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/temperature_dest_unit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_source_unit_spinner"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Destination Unit:"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/temperature_dest_unit_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_dest_unit_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/temperature_input_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_dest_unit_spinner"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Input Value:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/temperature_input_value_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_input_value_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/temperature_convert_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_input_value_edittext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Convert" />

        <TextView
            android:id="@+id/temperature_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_convert_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Result:"
            android:textSize="18sp" />

    </RelativeLayout>

</ScrollView>